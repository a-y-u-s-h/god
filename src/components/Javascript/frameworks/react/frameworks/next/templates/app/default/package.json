{
  "name": "placeholder",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ayush Sharma <code.ayush@gmail.com>",
  "license": "MIT",
  "scripts": {
    "develop": "next",
    "docs": "serve docs",
    "build": "next build && next export -o build/",
    "start": "next start",
    "prepare": "yarn format && yarn clean",
    "format": "prettier --write 'src/**/*.{js,jsx}'",
    "storybook": "start-storybook -s ./public,./src/assets/ -p 6006",
    "update": "npx npm-check-updates -u --timeout 300000 && yarn install",
    "clean": "rimraf .next yarn.lock *lock.json .nyc_output coverage *.log",
    "test:unit": "yarn prepare && jest --config ./jest.config.js --passWithNoTests --watchAll",
    "test:e2e": "yarn prepare && start-server-and-test develop http://localhost:3000 'cypress open'",
    "test:coverage": "jest --config ./jest.config.js --passWithNoTests --coverage && serve coverage/lcov-report",
    "storybook:build": "NODE_ENV=production build-storybook -s ./public,./src/assets/ -o .storybook/styleguide",
    "storybook:share": "NODE_ENV=production yarn storybook:build && surge .storybook/styleguide",
    "build:share": "NODE_ENV=production yarn build && surge ./build"
  },
  "precommit": [
    "prepare"
  ],
  "dependencies": {
    "@chakra-ui/react": "^1.6.10",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@headlessui/react": "^1.4.1",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/forms": "^0.3.4",
    "@tailwindcss/typography": "^0.4.1",
    "@xstate/inspect": "^0.5.1",
    "@xstate/react": "^1.6.2",
    "animejs": "^3.2.1",
    "autoprefixer": "^10.4.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "deepmerge": "^4.2.2",
    "evergreen-ui": "^6.5.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^5",
    "howler": "^2.2.3",
    "jest": "^27.3.1",
    "joi": "^17.4.2",
    "js-yaml": "^4.1.0",
    "js-yaml-loader": "^1.2.2",
    "mousetrap": "^1.6.5",
    "next": "^12.0.2",
    "next-connect": "^0.11.0",
    "p5": "^1.4.0",
    "postcss": "^8.3.11",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hotkeys-hook": "^3.4.4",
    "tailwindcss": "^2.2.19",
    "tailwindcss-filters": "^3.0.0",
    "theme-ui": "^0.12.0",
    "xstate": "^4.26.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@cypress/code-coverage": "^3.9.11",
    "@emotion/babel-plugin-jsx-pragmatic": "^0.1.5",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-console": "^1.2.3",
    "@storybook/addon-controls": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.3.12",
    "@storybook/addon-viewport": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/react": "^6.3.12",
    "@storybook/theming": "^6.3.12",
    "@testing-library/cypress": "^8.0.1",
    "@testing-library/dom": "^8.10.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@theme-ui/presets": "^0.12.0",
    "babel-jest": "^27.3.1",
    "babel-loader": "^8.2.3",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^8.7.0",
    "cypress-axe": "^0.13.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-yaml-transform": "^0.2.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.0.2",
    "postcss-preset-env": "^6.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1",
    "react-icons": "^4.3.1",
    "react-is": "^17.0.2",
    "sass": "^1.43.4",
    "start-server-and-test": "^1.14.0",
    "yaml-loader": "^0.6.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      [
        "@emotion/babel-plugin-jsx-pragmatic",
        {
          "module": "theme-ui",
          "import": "jsx",
          "export": "jsx"
        }
      ],
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "jsx",
          "pragmaFrag": "React.Fragment"
        }
      ]
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 120,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "requirePragma": false,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.sass",
        "options": {
          "printWidth": 999
        }
      },
      {
        "files": "*.mdx",
        "options": {
          "tabWidth": 2,
          "printWidth": 120,
          "proseWrap": "always"
        }
      },
      {
        "files": "*.md",
        "options": {
          "tabWidth": 2,
          "printWidth": 120,
          "proseWrap": "always",
          "htmlWhitespaceSensitivity": "strict"
        }
      },
      {
        "files": "*.html",
        "options": {
          "htmlWhitespaceSensitivity": "strict"
        }
      }
    ]
  }
}

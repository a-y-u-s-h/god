{
  "name": "placeholder",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Ayush Sharma <code.ayush@gmail.com>",
  "license": "MIT",
  "scripts": {
    "develop": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest --config ./jest.config.js --passWithNoTests --watchAll",
    "lint": "prettier --write 'src/**/*.{js,jsx}'",
    "update": "npx npm-check-updates -u --timeout 300000 && yarn install",
    "clean": "rimraf .next yarn.lock"
  },
  "dependencies": {
    "@chakra-ui/core": "next",
    "@xstate/react": "^0.8.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "framer-motion": "^2.6.6",
    "jest": "^26.4.2",
    "js-yaml-loader": "^1.2.2",
    "next": "^9.5.3",
    "next-connect": "^0.9.0",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "xstate": "^4.13.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 120,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.sass",
        "options": {
          "printWidth": 999
        }
      },
      {
        "files": "*.mdx",
        "options": {
          "tabWidth": 2,
          "printWidth": 80,
          "proseWrap": "always"
        }
      },
      {
        "files": "*.md",
        "options": {
          "tabWidth": 2,
          "printWidth": 80,
          "proseWrap": "always",
          "htmlWhitespaceSensitivity": "strict"
        }
      },
      {
        "files": "*.html",
        "options": {
          "htmlWhitespaceSensitivity": "strict"
        }
      }
    ]
  }
}

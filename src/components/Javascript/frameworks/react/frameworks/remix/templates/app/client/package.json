{
  "name": "placeholder",
  "version": "1.0.0",
  "type": "module",
  "main": "src/root.js",
  "license": "MIT",
  "scripts": {
    "predevelop": "bun clean && bun format",
    "develop": "remix dev --manual",
    "prebuild": "bun clean && bun format",
    "build": "remix build",
    "clean": "rimraf build bun.lockb",
    "format": "prettier . --write"
  },
  "dependencies": {
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@remix-run/serve": "^2.0.1",
    "@xstate/react": "^3.2.2",
    "isbot": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xstate": "^4.38.2",
    "yaml": "^2.3.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@xstate/inspect": "^0.8.0",
    "@xstate/test": "^0.5.1",
    "autoprefixer": "^10.4.16",
    "js-yaml": "^4.1.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 80,
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "requirePragma": false,
    "proseWrap": "preserve",
    "overrides": [
      {
        "files": "*.sass",
        "options": {
          "printWidth": 1000
        }
      },
      {
        "files": "*.mdx",
        "options": {
          "tabWidth": 2,
          "printWidth": 1000,
          "proseWrap": "always"
        }
      },
      {
        "files": "*.md",
        "options": {
          "tabWidth": 2,
          "printWidth": 1000,
          "proseWrap": "always",
          "htmlWhitespaceSensitivity": "strict"
        }
      },
      {
        "files": "*.html",
        "options": {
          "htmlWhitespaceSensitivity": "strict"
        }
      }
    ]
  }
}
